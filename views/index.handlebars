<img src="/assets/img/burger.png" class="burger-image">

<div class="burger-lists my-5 d-flex flex-column flex-sm-row justify-content-between">
  <div class="undevoured-list list-box flex-grow-1 m-2">
    <h2 class="list-title glow">Not devoured:</h2>
    <ul class="list-content">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="devoured-list list-box flex-grow-1 m-2">
    <h2 class="list-title glow">Devoured:</h2>
    <ul class="list-content">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

